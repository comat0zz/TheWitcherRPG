<div class="witcher-insertion-area"
  data-dist-field="{{dist_field}}" 
  data-dist-type="{{dist_type}}">
{{#ife data.length 1}}
  {{#with data.[0]}}
    <div data-item-id="{{id}}">
      <img class="click-show" src="{{img}}" title="{{name}}">&nbsp;{{name}}&nbsp;
      <a class="delete"><i class="fas fa-trash-alt"></i></a>
    </div>
  {{/with}}
{{else}}
  <span class="no-element">{{{localize "Witcher.DragDrop"}}}</span>
{{/ife}}
</div>
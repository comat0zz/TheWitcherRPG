<form class="{{cssClass}} witcher-actor-{{actor.type}} flexcol" autocomplete="off">

{{!-- NPC Sheet Navigation --}}
<nav class="sheet-navigation main-nav tabs" data-group="primary">
  <!-- Общая информация, статы, навыки -->
  <a class="item" data-tab="content-summary" data-group="primary">{{localize "Witcher.Summary"}}</a>
  <!-- Магия и заклинания, рецепты -->
  <a class="item" data-tab="content-spellbook" data-group="primary">{{localize "Witcher.Spellbook"}}</a>
  <!-- Рюкзак со всем шмотом -->
  <a class="item" data-tab="content-backpacks" data-group="primary">{{localize "Witcher.Actor.TabBackpack"}}</a>
  <!-- Активные статусы и эффекты на персонаже -->
  <a class="item" data-tab="content-statuses" data-group="primary">{{localize "Witcher.Statuses"}}</a>
  <!-- Профессия и раса -->
  <a class="item" data-tab="content-profrace" data-group="primary">{{localize "Witcher.Profrace"}}</a>
  <!-- Биография и жизненный путь -->
  <a class="item" data-tab="content-biography" data-group="primary">{{localize "Witcher.Biography"}}</a>
</nav>

{{!-- NPC Sheet Body --}}
<section class="actor-content">
  <div class="tab content-summary flexcol" data-group="primary" data-tab="content-summary">

    <div class="flexrow">
      <div class="left-side">
        <!-- Чукча не верстал 7 лет, потому сорян кто это увидит :) -->
        <table>
          <tr>
            <td><input name="name" type="text" value="{{actor.name}}"/></td>
            <td class="width-cells-30px"></td>
            <td class="width-cells-70px"><input name="data.biography.sex" type="text" value="{{data.data.biography.sex}}"/></td>
            <td class="width-cells-30px"></td>
            <td class="width-cells-70px"><input name="data.biography.age" type="text" value="{{data.data.biography.age}}"/></td>
          </tr>
          <tr>
            <td class="border-line-prop">{{localize "Witcher.Actor.Biography.Name"}}</td>
            <td class="width-cells-30px"></td>
            <td class="border-line-prop">{{localize "Witcher.Actor.Biography.Sex"}}</td>
            <td class="width-cells-30px"></td>
            <td class="border-line-prop">{{localize "Witcher.Actor.Biography.Age"}}</td>
          </tr>
        </table>
        <table>
          <tr>
            <td class="width-cells-labels">&nbsp;</td>
            <td class="width-cells-30px"></td>
            <td class="width-cells-labels"></td>
          </tr>
          <tr>
            <td class="border-line-prop">{{localize "Witcher.Actor.Biography.Race"}}</td>
            <td class="width-cells-30px"></td>
            <td class="border-line-prop">{{localize "Witcher.Actor.Biography.Profession"}}</td>
          </tr>
        </table>

        <nav class="sheet-navigation tabs second-nav" data-group="secondary-tabs">
          <a class="item" data-tab="summary-skills" data-group="secondary-tabs">{{localize "Witcher.Summary"}}</a>
          <a class="item" data-tab="summary-inventory" data-group="secondary-tabs">{{localize "Witcher.Inventory"}}</a>
        </nav>
        
        <div class="second-nav-content">
          <div class="tab" data-group="secondary-tabs" data-tab="summary-skills">
            {{>"systems/TheWitcherRPG/templates/sheets/actors/hero/actor-skills-list.hbs"}}
          </div>
          <div class="tab" data-group="secondary-tabs" data-tab="summary-inventory">
            {{>"systems/TheWitcherRPG/templates/sheets/actors/hero/actor-inventory-list.hbs"}}
          </div>
        </div>
      </div>

      <div class="right-side">
        <img class="profile" src="{{actor.img}}" title="{{actor.name}}" data-edit="img"/>

        <div class="quick-action-menu">
          <input type="button" value="{{localize "Witcher.Actor.Buttons.QuickActions"}}">
        </div>

        <table class="table-unstaled table-firsttd-click">
          <tr>
            <th></th>
            <th>{{localize "Witcher.Current"}}</th>
            <th>{{localize "Witcher.Maximum"}}</th>
          </tr>
          <tr>
            <td>{{localize "Witcher.Actor.Stats.HP.Short"}}</td>
            <td><input type="text" name="data.stats.HP.value" value="{{data.data.stats.HP.value}}"  data-dtype="Number"/></td>
            <td>{{data.data.stats.HP.total}}</td>
          </tr>
          <tr>
            <td>{{localize "Witcher.Actor.Stats.STA.Short"}}</td>
            <td><input type="text" name="data.stats.STA.value" value="{{data.data.stats.STA.value}}"  data-dtype="Number"/></td>
            <td>{{data.data.stats.STA.total}}</td>
          </tr>
          <tr>
            <td>{{localize "Witcher.Actor.Stats.LUCK.Short"}}</td>
            <td><input type="text" name="data.stats.LUCK.value" value="{{data.data.stats.LUCK.value}}"  data-dtype="Number"/></td>
            <td><input type="text" name="data.stats.LUCK.total" value="{{data.data.stats.LUCK.total}}"  data-dtype="Number"/></td>
          </tr>
          <tr>
            <td colspan="2">{{localize "Witcher.Actor.Stats.STUN.Short"}}</td>
            <td>{{data.data.stats.STUN.total}}</td>
          </tr>
          {{#ifgt data.stats.VIGOR.total 0}}
          <tr>
            <td colspan="2">{{localize "Witcher.Actor.Stats.VIGOR.Short"}}</td>
            <td>{{data.data.stats.VIGOR.total}}</td>
          </tr>
          {{/ifgt}}
          <tr>
            <td colspan="2">{{localize "Witcher.Actor.Stats.RUN.Short"}}</td>
            <td>{{data.data.stats.RUN.total}}</td>
          </tr>
          <tr>
            <td colspan="2">{{localize "Witcher.Actor.Stats.LEAP.Short"}}</td>
            <td>{{data.data.stats.LEAP.total}}</td>
          </tr>
          <tr>
            <td colspan="2">{{localize "Witcher.Actor.Stats.REC.Short"}}</td>
            <td>{{data.data.stats.REC.total}}</td>
          </tr>
          <tr>
            <td>{{localize "Witcher.Actor.Stats.ENC.Short"}}</td>
            <td>{{data.data.stats.ENC.value}}</td>
            <td>{{data.data.stats.ENC.total}}</td>
          </tr>
          <tr>
            <td>{{localize "Witcher.Actor.StatsCount"}}</td>
            <td><input type="text" name="data.trainSkills.StatsCount" value="{{data.data.StatsCount}}"  data-dtype="Number" disabled/></td>
            <td>todo</td>
          </tr>
          <tr>
            <td>{{localize "Witcher.Actor.SkillsCount"}}</td>
            <td><input type="text" name="data.trainSkills.SkillsCount" value="{{data.data.SkillsCount}}"  data-dtype="Number" disabled/></td>
            <td>todo</td>
          </tr>
        </table>

        <table class="table-unstaled table-firsttd-click TableMeleeFight">
          <tr><th colspan="2"><i class="fas fa-fist-raised"></i>  {{localize "Witcher.Actor.MeleeFight"}}</th></tr>
          <tr>
            <td>{{localize "Witcher.Actor.MeleeFightHand"}}</td>
            <td>{{data.data.meleeFightHand}}</td>
          </tr>
          <tr>
            <td>{{localize "Witcher.Actor.MeleeFightFoot"}}</td>
            <td>{{data.data.meleeFightFoot}}</td>
          </tr>
        </table>

        <!--
        <table class="table-unstaled actor-defence-block">

        </table>
        -->
      </div>
    </div>
  </div>

  <div class="tab content-backpacks flexcol" data-group="primary" data-tab="content-backpacks">
    {{>"systems/TheWitcherRPG/templates/sheets/actors/hero/backpack.hbs"}}
  </div>
  
  <div class="tab flexcol content-spellbook" data-group="primary" data-tab="content-spellbook">
    Spellbook
  </div>

  <div class="tab content-statuses flexcol" data-group="primary" data-tab="content-statuses">
    {{>"systems/TheWitcherRPG/templates/sheets/actors/hero/statuses.hbs"}}
  </div>

  <div class="tab content-profrace flexcol" data-group="primary" data-tab="content-profrace">
profrace

  </div>

  <div class="tab content-biography flexcol" data-group="primary" data-tab="content-biography">
    biography

  </div>

</section>
</form>
<form class="{{cssClass}} witcher-actor-{{item.type}} flexcol" autocomplete="off">

{{!-- NPC Sheet Navigation --}}
<nav class="sheet-navigation tabs" data-group="primary">
  <!-- Общая информация, статы, навыки -->
  <a class="item" data-tab="summary" data-group="primary">{{localize "Witcher.Summary"}}</a>
  <!-- Ивентарь -->
  <a class="item" data-tab="inventory" data-group="primary">{{localize "Witcher.Inventory"}}</a>
  <!-- Магия и заклинания, рецепты -->
  <a class="item" data-tab="Spellbook" data-group="primary">{{localize "Witcher.Spellbook"}}</a>
  <!-- Активные статусы и эффекты на персонаже -->
  <a class="item" data-tab="statuses" data-group="primary">{{localize "Witcher.Statuses"}}</a>
  <!-- Профессия и раса -->
  <a class="item" data-tab="profrace" data-group="primary">{{localize "Witcher.Profrace"}}</a>
  <!-- Биография и жизненный путь -->
  <a class="item" data-tab="biography" data-group="primary">{{localize "Witcher.Biography"}}</a>
</nav>

{{!-- NPC Sheet Body --}}
<section class="actor-content">
    
  <div class="tab summary flexcol" data-group="primary" data-tab="summary">
    <div class="left-side">
      <div class="witcher-name">
        <h1>
          
        </h1>
      </div>

      <div class="witcher-skills">

      </div>

    </div>
    <div class="right-side">

    </div>  
  </div>

<h1><input name="name" type="text" value="{{item.name}}" placeholder="{{localize "Witcher.Actor.Name"}}" /></h1>

  <div class="flex-parent">
   
    <div class="flex-item">
      <img class="profile" src="{{item.img}}" title="{{item.name}}" data-edit="img"/>
    </div>

    <div class="flex-item">
    <table class="actor-table-stats">
      <tr class="block-40px">
        <td>{{localize "Witcher.Actor.Race"}}</td>
        <td></td>
      </tr>
      <tr class="block-40px">
        <td>{{localize "Witcher.Actor.Profession"}}</td>
        <td></td>
      </tr>
      <tr>
        <td colspan="2">{{localize "Witcher.Actor.DefiningSkill"}}</td>
      </tr>
      <tr>
        <td colspan="2"></td>
      </tr>
      <tr>
        <td>{{localize "Witcher.Actor.Reputation"}}</td>
        <td></td>
      </tr>
      <tr>
        <td>{{localize "Witcher.Actor.Sex"}}</td>
        <td></td>
      </tr>
      <tr>
        <td>{{localize "Witcher.Actor.Age"}}</td>
        <td></td>
      </tr>
       <tr>
        <td></td>
        <td></td>
      </tr>
      <tr>
        <td>{{localize "Witcher.Actor.Krones"}}</td>
        <td></td>
      </tr>
    </table>
    </div>

    <div class="flex-item">
      <table class="actor-table-stats">
        <tr>
          <td>{{localize "Witcher.Actor.Stats.INT.Short"}}</td>
          <td><input type="text" name="data.stats.INT.value" value="{{data.stats.INT.value}}"  data-dtype="Number"/></td>
          <td>{{data.stats.INT.total}}</td>
        </tr>
        <tr>
          <td>{{localize "Witcher.Actor.Stats.REF.Short"}}</td>

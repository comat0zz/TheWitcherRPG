    </div>

    <div class="flex-item">
      <table>
        <tr><th colspan="2">{{localize "Witcher.Actor.Buttons.QuickActions"}}</th></tr>
        <tr>
          <td><input type="submit" value="{{localize "Witcher.Actor.Buttons.Initiative"}}" name=""/></td>

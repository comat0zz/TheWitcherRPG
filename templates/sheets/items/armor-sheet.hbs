<form class="{{cssClass}} witcher-item-{{item.type}} flexcol" autocomplete="off">

{{!-- Item Sheet Header --}}
{{> "systems/TheWitcherRPG/templates/sheets/item-header.hbs" data=data item=item}}

{{!-- Item Sheet Navigation --}}
<nav class="sheet-navigation tabs" data-group="primary-tabs">
  <a class="item" data-tab="tab-Properties" data-group="primary-tabs">{{localize "Witcher.Item.Properties"}}</a>
  <a class="item" data-tab="tab-Effects" data-group="primary-tabs">{{localize "Witcher.Item.Effect"}}</a>
  <a class="item" data-tab="tab-Detailed" data-group="primary-tabs">{{localize "Witcher.Item.Detailed"}}</a>
</nav>

{{!-- Item Sheet Body --}}
<section class="item-content">
  <div class="tab flexcol" data-tab="tab-Properties" data-group="primary-tabs">
    <table>
      <tr>
        <th>{{localize "Witcher.Item.Weight"}}</th>
        <th>{{localize "Witcher.Item.Cost"}}</th>
        <th>{{localize "Witcher.Item.Rarity.Label"}}</th>
        <th>{{localize "Witcher.Item.Reliability"}}</th>
      </tr>
      <tr class="table-th-value">
        <td><input type="text" name="data.weight" value="{{data.weight}}" data-dtype="Number"/></td>
        <td><input type="text" name="data.cost" value="{{data.cost}}" data-dtype="Number" /></td>
        <td>
          <select name="data.rarity">
            {{#select data.rarity}}
              {{#each config.RarityItem as |name value|}}
                <option value="{{value}}">{{localize name.long}}</option>
              {{/each}}
            {{/select}}
          </select>
        </td>
        <td><input name="data.reliability" type="text" value="{{data.reliability}}" data-dtype="Number" /></td>
      </tr>

      <tr>
        <td>{{localize "Witcher.Item.Armor.Label.Long"}}</td>
        <td colspan="3">
          <input name="data.points" type="text" value="{{data.points}}" data-dtype="Number" />
        </td>
      </tr>

      <tr>
        <td>{{localize "Witcher.Item.Armor.DefenceLabel"}}</td>
        <td colspan="3">
          <select name="data.defence">
            {{#select data.defence}}
              {{#each config.ArmorDefence as |name value|}}
                <option value="{{value}}">{{localize name}}</option>
              {{/each}}
            {{/select}}
          </select>
        </td>
      </tr>

      <tr>
        <td>{{localize "Witcher.Item.Armor.CategoryLabel"}}</td>
        <td colspan="3">
          <select name="data.category">
            {{#select data.category}}
              {{#each config.ArmorCategory as |name value|}}
                <option value="{{value}}">{{localize name}}</option>
              {{/each}}
            {{/select}}
          </select>
        </td>
      </tr>

      <tr>
        <td>{{localize "Witcher.Tags"}}</td>
        <td colspan="3">
          <select name="data.tags">
            {{#select data.tags}}
              {{#each config.ItemTags as |name value|}}
                <option value="{{value}}">{{localize name}}</option>
              {{/each}}
            {{/select}}
          </select>
        </td>
      </tr>

      <tr>
        <td>{{localize "Witcher.Item.Armor.Stiffness.Long"}}</td>
        <td colspan="3">
          <input name="data.stiffness" type="text" value="{{data.stiffness}}" data-dtype="Number" />
        </td>
      </tr>

      <tr>
        <td>{{localize "Witcher.Item.Armor.Glifs.Long"}}</td>
        <td colspan="3">
          <input name="data.glifs" type="text" value="{{data.glifs}}" data-dtype="Number" />
        </td>
      </tr>  

      <tr>
        <td>{{localize "Witcher.Item.DiagramLabel"}}</td>
        <td colspan="3">
          {{> "systems/TheWitcherRPG/templates/insertions/insertion-area.hbs" data=data.assocDiagram dist_field="assocDiagram;0;0;1" dist_type="diagrams" tpl="one"}}
        </td>
      </tr>
      <tr>
        <td>{{localize "Witcher.Source"}}</td>
        <td colspan="3">
          <select name="data.source">
            {{#select data.source}}
              {{#each config.SourceList as |name type|}}
                <option value="{{type}}">{{localize name}}</option>
              {{/each}}
            {{/select}}
          </select> 
        </td>
     </tr>
    </table>
    
  </div>
  <div class="tab flexcol" data-tab="tab-Effects" data-group="primary-tabs">
    {{> "systems/TheWitcherRPG/templates/insertions/insertion-area.hbs" data=data.effects dist_field="effects;0;0;0" dist_type="all" isQty=false tpl="many"}}
  </div>
  <div class="tab flexcol" data-tab="tab-Detailed" data-group="primary-tabs">
    {{editor content=data.description target="data.description" button=true owner=owner editable=editable}}
  </div>
</section>
</form>
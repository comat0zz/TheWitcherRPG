<form class="{{cssClass}} witcher-item-{{item.type}} flexcol" autocomplete="off">

{{!-- Item Sheet Header --}}
{{> "systems/TheWitcherRPG/templates/sheets/item-header.hbs" data=data item=item}}

{{!-- Item Sheet Navigation --}}
<nav class="sheet-navigation tabs" data-group="primary-tabs">
  <a class="item" data-tab="tab-Properties" data-group="primary-tabs">{{localize "Witcher.Item.Properties"}}</a>
  <a class="item" data-tab="tab-Detailed" data-group="primary-tabs">{{localize "Witcher.Item.Detailed"}}</a>
</nav>

{{!-- Item Sheet Body --}}
<section class="item-content">
  <div class="tab flexcol" data-tab="tab-Properties" data-group="primary-tabs">
    <table class="table-item-card">
      <tr>
        <td>{{localize "Witcher.Item.Effects.Category"}}</td>
        <td>
          <select name="data.category">
            {{#select data.category}}
              {{#each config.EffectsCategories as |value key|}}
                <option value="{{key}}">{{localize value}}</option>
              {{/each}}
            {{/select}}
          </select> 
        </td>
      </tr>
      <tr>
        <td colspan="2">
          {{#ife data.category "simple"}}{{localize "Witcher.Item.Effects.Categories.simple.info"}}{{/ife}}
          {{#ife data.category "light"}}{{localize "Witcher.Item.Effects.Categories.light.info"}}{{/ife}}
          {{#ife data.category "aura"}}{{localize "Witcher.Item.Effects.Categories.aura.info"}}{{/ife}}
          {{#ife data.category "properties"}}{{localize "Witcher.Item.Effects.Categories.properties.info"}}{{/ife}}
        </td>
      </tr>

      <tr>
        <td>{{localize "Witcher.Item.Effects.TargetsValue"}}</td>
        <td>
          <select name="data.target">
            {{#select data.target}}
              {{#each config.EffectsTarget as |value key|}}
                <option value="{{key}}">{{localize value}}</option>
              {{/each}}
            {{/select}}
          </select> 
        </td>
      </tr>
      
      <tr>
        <td>{{localize "Witcher.Source"}}</td>
        <td>
          <select name="data.source">
              {{#select data.source}}
                {{#each config.SourceList as |name type|}}
                  <option value="{{type}}">{{localize name}}</option>
                {{/each}}
              {{/select}}
            </select> 
        </td>
     </tr>
    </table>

    <table class="table-item-card">
      <tr>
        <th>{{localize "Witcher.Item.Effects.TableMod"}}</th>
        <th colspan="2">{{localize "Witcher.Item.Effects.TableGoal"}}</th>
        <th>{{localize "Witcher.Item.Effects.TableValue"}}</th>
        <!-- <th><input type="button" name="effects-add" value=" + "/></th> -->
      </tr>
      <tr class="attack-of-the-clones">
        <td>
          <select name="data.dataSet.modification">
             {{#select data.dataSet.modification}}
              <option value="+"> + </option>
              <option value="-"> - </option>
             {{/select}}
          </select>
        </td>
        <td></td>
        <td></td>
        <td></td>
      </tr>
    </table>

  </div>
  <div class="tab flexcol" data-tab="tab-Detailed" data-group="primary-tabs">
    {{editor content=data.description target="data.description" button=true owner=owner editable=editable}}
  </div>
</section>
</form>
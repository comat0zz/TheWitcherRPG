<tr>
  <td>{{localize "Witcher.Item.Spells.CostStamina"}}</td>
  <td colspan="2"><input name="data.costStamina" type="text" value="{{data.costStamina}}" placeholder=""  data-dtype="Number" /></td>
</tr>
<tr>
  <td>{{localize "Witcher.Item.Spells.Deities"}}</td>
  <td colspan="2"><input name="data.specData.deities" type="text" value="{{data.specData.deities}}" placeholder="" /></td>
</tr>
<tr>
  <td>{{localize "Witcher.Item.Spells.LevelTypeLabel"}}</td>
  <td colspan="2">
    <select name="data.specData.LevelType">
      {{#select data.specData.LevelType}}
        {{#each config.LevelType as |name type|}}
          <option value="{{type}}">{{localize name}}</option>
        {{/each}}
      {{/select}}
    </select> 
  </td>
</tr>

<form class="{{cssClass}} witcher-item-{{item.type}}" autocomplete="off">
<header class="item-header">
  <img src="{{item.img}}" data-edit="img" title="{{item.name}}" />    
  <div class="item-header-first-column">
    <h1 class="item-name">
      <input name="name" type="text" value="{{item.name}}" placeholder="{{localize "Witcher.Item.Name"}}" />
    </h1>
  </div>
</header>
<div class="item-body-container">
  {{editor content=data.description target="data.description" button=true owner=owner editable=editable}}
</div>
</form>
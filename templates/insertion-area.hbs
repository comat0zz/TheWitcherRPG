<div class="witcher-insertion-area"
  data-dist-field="{{dist_field}}" 
  data-dist-type="{{dist_type}}">
  {{#isArray data}}
    {{#ifgt data.length 1}}
    <table>
      {{#each data}}
        <tr data-item-id="{{id}}">
          <td>
            <img class="img35x35 click-show" src="{{img}}" title="{{name}}">
          </td>
          <td>{{name}}</td>          
          {{#if ../isQty}}
            <td><input class="qty-edit" type="text" value="{{qty}}" data-dtype="Number" /></td>
          {{/if}}
          <td><a class="delete"><i class="fas fa-trash-alt"></i></a></td>
        </tr>
      {{/each}}
    </table>
    {{else}}
      {{#ife data.length 1}}
        {{#with data.[0]}}
        <div data-item-id="{{id}}">
          <img class="img35x35 click-show" src="{{img}}" title="{{name}}">&nbsp;
          {{name}}&nbsp;
          <a class="delete"><i class="fas fa-trash-alt"></i></a>
        </div>
        {{/with}}
      {{else}}
        {{localize "Witcher.DragDrop"}}
      {{/ife}}
    {{/ifgt}}
  {{else}}
    {{localize "Witcher.DragDrop"}}
  {{/isArray}}
</div>